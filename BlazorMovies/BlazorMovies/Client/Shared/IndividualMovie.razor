<div>
    <p>Title : <b>@Movies.Title</b></p>
    <p>ReleaseDate : <b>@Movies.ReleaseDate.ToShortDateString()</b></p>
    @if(DisplayButtons)
    {
        <div>
            <button @onclick="@(()=> DeleteMovie.InvokeAsync(Movies))">Delete</button>
        </div>
    }
</div>
@code
{
    [Parameter] public Movie Movies { get; set; }
    [Parameter] public bool DisplayButtons { get; set; } = false;
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; }
   

}